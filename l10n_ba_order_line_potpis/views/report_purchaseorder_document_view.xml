        <template id="purchase_order_report" inherit_id="purchase.report_purchaseorder_document">
  
            <xpath expr="//p[@t-field='o.notes']/.."
                   position="after">
                <div style="min-height: 1.3cm;" />   
                <div id="potpis" class="row mt-4 mb32">
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2 text-center">
                       <span t-esc="'__________________________________'"/>
                    </div>
                </div>
                <div id="potpis_ime" class="row mt-4 mb16">
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2" />
                    <div class="col-3 bm-2 text-center">
                       <span t-field="o.user_id" class='m-0' />
                    </div>
                </div>
            </xpath>

        </template>

